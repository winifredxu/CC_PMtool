<%= simple_form_for [@project, @discussion], html: { class: 'form-horizontal' }, 
    remote:true do |f| %>  
<!-- remote:true is so the form_for is sent as JS -->
<!-- form_for submit to POST /question/:id/answer  by convention -->
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.submit class: "btn btn-primary" %> 
<% end %>